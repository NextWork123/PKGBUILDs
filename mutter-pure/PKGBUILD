pkgname=mutter-pure
pkgver=49.0
pkgrel=1
pkgdesc="Window manager and compositor for GNOME"
url="https://gitlab.gnome.org/GNOME/mutter"
arch=(x86_64)
license=(GPL-2.0-or-later)
options=(!strip debug)
depends=(
